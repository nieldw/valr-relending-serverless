# VALR API Credentials (Required)
# Get these from your VALR account API settings
VALR_API_KEY=your_api_key_here
VALR_API_SECRET=your_api_secret_here

# Loan Management Configuration
# Set to true for testing without making actual changes
DRY_RUN=true

# Comma-separated list of currencies to manage
ENABLED_CURRENCIES=ZAR,BTC,ETH

# Minimum amounts to add to loan offers (JSON format)
# Adjust based on your trading strategy and risk tolerance
MIN_INCREMENT_AMOUNT={"ZAR": "100", "BTC": "0.0001", "ETH": "0.001"}

# Maximum ratio of available balance to use for loan increases (0.0 to 1.0)
# 0.8 means use up to 80% of available balance
MAX_LOAN_RATIO=0.8

# Optional: Logging level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO